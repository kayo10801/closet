 <%= form_with model: @clothe, local: true do |f|%>
  <div class="field">
    <%= f.label :memo, "memo" %><br />
    <%= f.text_field :memo %>
  </div>
  <%# form_withとは、railsで情報を送信するためのヘルパーメソッドです。 form_withを使うことにより
  簡単に入力フォームに必要なHTMLを作成することができる %>
<%# form_withはform_forとform_tagをどちらも同様に扱えるようにしたもの %>

  <div class='input-birth-wrap'>
    <%= f.label :date, "date" %><br />
      <%= raw sprintf(
                  f.date_select(
                    :date,
                    class:'select-birth',
                    id:"date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2010,
                    end_year: (Time.now.year ),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
   

  <div class="field">
    <%= f.label :season, "season" %><br />
    <%= f.select :season,[["春","春"],["夏", "夏"],["秋","秋"],["冬", "冬"]],include_blank: "選択して下さい", class: :form__text %>
  </div>
  

   <div class="field">
   <%= f.label :color, "color" %><br />
   <%= f.select :color,[["白","白"],["ベージュ", "ベージュ"],["茶","茶"],["黒", "黒"],["赤","赤"],["オレンジ", "オレンジ"],["黄","黄"],["緑", "緑"],
    ["紫","紫"],["青","青"],],include_blank: "選択して下さい", class: :form__text %>
  </div>

   <div class="field">
   <%= f.label :category, "category" %><br />
   <%= f.select :category,[["インナー","インナー"],["トップス", "トップス"],["アウター","アウター"],["ボトム", "ボトム"],],include_blank: "選択して下さい", class: :form__text %>
  </div>

   <div class="field">
   <%= f.label :price, "price" %><br />
   <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :image, "your clothes" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: :form__btn  %>
  </div>
<% end %>
